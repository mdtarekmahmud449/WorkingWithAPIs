<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/productsRecyclerFragment">

    <fragment
        android:id="@+id/productsRecyclerFragment"
        android:name="com.example.apis.fragments.ProductsRecyclerFragment"
        android:label="fragment_products_recycler"
        tools:layout="@layout/fragment_products_recycler" >
        <action
            android:id="@+id/action_productsRecyclerFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.apis.fragments.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" />
</navigation>